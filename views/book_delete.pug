extends layout 

block content 

    h1 #{title}: #{book.title}

    if instances.length
        p #[strong These book instances need to be deleted before deleting this book can be attempted.]
        div(style='margin-left:20px;margin-top:20px')
            h4 Instances
            dl 
                for instance in instances
                    dt
                        a(href=instance.url) #{instance._id}
                    dd #{instance.imprint}
    else 
        p Are you sure you want to delete this book?

        form(method="post") 
            div.form-group
                input#instanceid.form-control(type="hidden", name="bookid" value=book._id)
                
                button.btn.btn-primary(type="submit") Delete