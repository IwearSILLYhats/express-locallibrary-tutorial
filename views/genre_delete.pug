extends layout

block content 

    h1 #{title} - #{genre.name}

    if books.length
        h4 #[strong These books need to be deleted or updated before this genre can be deleted.]
        div
            dl 
                for book in books
                    dt
                        a(href=book.url) #{book.title}
                    dd #{book.summary}
    else
        p Are you sure you want to delete this genre?

        form(method="post")
            div.form-group
                input#instanceid.form-control(type='hidden', name='genreid', value=genre._id )

            button.btn.btn-primary( type='submit') Delete